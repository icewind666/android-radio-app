<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="icewindinc.com.radiocaprise.MainActivity"
    android:background="@color/black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/hardcore"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView"
        android:layout_alignParentEnd="true"
        tools:alpha="0.5" />

    <TextView
        android:text="on air:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Hopeless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textColor="@color/white" />

    <TextView
        android:text="song number one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5"
        android:textColor="@color/white" />

    <TextView
        android:text="metal/hardcore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/textView4"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/Forward"
        android:id="@+id/imageButton3"
        style="@style/Widget.AppCompat.ImageButton"
        android:background="@color/black"
        android:tint="@color/white"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <TextView
        android:text="HARDCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/imageButton" />

    <TextView
        android:text="station:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/imageButton6"
        android:layout_toEndOf="@+id/imageButton5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/Star"
        android:id="@+id/imageButton6"
        android:background="@color/transparent"
        android:tint="@color/white"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        tools:scaleX="0.5"
        android:scaleY="0.5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/Backward"
        android:id="@+id/imageButton5"
        style="@style/Widget.AppCompat.ImageButton"
        android:tint="@color/white"
        android:background="@color/black"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton7" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/Play"
        android:id="@+id/imageButton"
        android:background="@color/black"
        style="@style/Widget.AppCompat.ImageButton"
        android:tint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton6" />

    <ImageButton
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/Mute"
        android:id="@+id/imageButton7"
        android:tint="@color/white"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentStart="true" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:id="@+id/seekBar"
        android:tickMarkTint="@color/white"
        android:backgroundTint="@color/white"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageButton5"
        android:layout_alignTop="@+id/imageButton7" />

    <TextView
        android:text="song:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/imageButton7" />

    <TextView
        android:text="genre:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/textView6"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="artist:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
